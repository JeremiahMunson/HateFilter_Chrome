{
    "name": "Hate Filter (For Chrome)",
    "version": "0.0",
    "description": "Blocks sentences that have hateful speech in them.",
    "permissions": ["webNavigation", "declarativeContent", "activeTab","storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "logo48.png",
            "128": "logo128.png"
        }
    },
    "icons": {
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "manifest_version": 2
}